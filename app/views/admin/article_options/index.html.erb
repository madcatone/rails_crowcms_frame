<%if notice %>
<div class="alert alert-success fade in">
  <button class="close" data-dismiss="alert">×</button>
  <i class="fa-fw fa fa-check"></i>
  <strong><%= notice %></strong>
</div>
<% end %>
<%if flash[:error] %>
<div class="alert alert-danger fade in">
  <button class="close" data-dismiss="alert">×</button>
  <i class="fa-fw fa fa-times"></i>
  <strong><%= flash[:error] %></strong>
</div>
<% end %>
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-cogs"></i> </span>
    <h2><p><%= t "article_option.table_title" %></p></h2>
  </header>
  <div>
    <div class="jarviswidget-editbox"></div>  
    <div class="widget-body">

      <div class="row">
        <div class="col-md-12">
          <a href="<%= new_admin_article_option_path() %>" 
             class="btn btn-labeled btn-success" 
             data-toggle="modal" 
             data-target="#myModal">
             <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>
            <%= t "operate.new" %>
          </a>
        </div>
      </div><br><!-- crete button -->

      <div class="row">
        <% @admin_article_options.each do |admin_article_option| %>
        <div class="col-md-12">
          <span class="label label-default" style="font-size:16px">
            <i class="fa fa-cogs"></i>&nbsp;&nbsp;<%= admin_article_option.text %>
          </span>
          <a href="<%= admin_article_option_path(admin_article_option) %>" 
            class="btn btn-labeled btn-danger pull-right" 
            data-method="delete"
            data-title="<%= t("article_option.delete_title") %>" 
            data-confirm="<%= t("article_option.delete_info") %>" >
            <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>  <!-- for style -->
            <%= t("operate.delete") %>
          </a><!-- delete button -->

          <a href="<%= edit_admin_article_option_path(admin_article_option) %>" 
            class="btn btn-labeled btn-warning btn-warning-mr pull-right" 
            data-toggle="modal" 
            data-target="#myModal_<%= admin_article_option.id %>">
            <span class="btn-label"><i class="glyphicon glyphicon-edit"></i></span>
            <%= t("operate.edit") %>
          </a><!-- edit button -->
        </div><br><br>
        <!-- dialog for edit tag -->
        <div class="modal fade" 
             id="myModal_<%= admin_article_option.id %>" 
             tabindex="-1" role="dialog" 
             aria-labelledby="myModal" 
             aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <!-- render form -->
              </div>
            </div>
        </div>
        <!-- end dialog -->
        <% end %>
      </div> 
    </div>
  </div>
</div>

<!-- dialog for create tag -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>
<!-- end dialog -->