<% if @admin_page.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger fade in">
    <button class="close" data-dismiss="alert">×</button>
    <i class="fa-fw fa fa-times"></i>
    <strong>
      <% @admin_page.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </strong>
  </div>
</div>
<% end %>
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"><i class="fa fa-edit"></i></span>
    <h2><%= t "page.edit_title" %></h2>
  </header>
  <div>
    <div class="jarviswidget-editbox"></div>  
    <div class="widget-body no-padding">
      <%= form_for(@admin_page, html: { class: "smart-form", id: "validate-form" }) do |f| %>
      <fieldset>
        
        <div class="row">
          <section class="col col-8">
            <label class="label"> 
              <%= f.label t "page.title" %><br>
            </label>
            <label class="input">
              <i class="icon-append fa fa-pencil"></i>
              <%= f.text_field :title, required: true, maxlength: 26 %>
            </label>
          </section>
        </div>

        <div class="row">
          <section class="col col-8"> 
            <label class="label"><%= f.label t "page.abstract"  %><br></label>
            <label class="textarea textarea-resizable"><i class="icon-append fa fa-comment"></i>   
              <%= f.text_area :abstract, class: "custom-scroll", rows: "7" %>                
            </label>
          </section>
        </div>
        
        <div class="row">
          <section class="col col-8"> 
            <label class="label"><%= f.label t "page.content"  %><br></label>
            <%= f.cktext_area :content, required: true, :ckeditor => {:language => 'zh-cn', :toolbar => 'Full' }  %>
          </section>
        </div>

        <footer>
            <%= link_to '返回', admin_pages_path, class: "btn btn-primary" %>
          <div class="actions">
            <%= f.submit '提交', class: "btn btn-primary" %>
          </div>
        </footer>
      </fieldset>
      <% end %>

    </div>
  </div>
</div>