<%= form_for(@admin_album_tag, html: { id: "validate-form" } ) do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h4 class="modal-title" id="myModalLabel"><%= t("album_tag.edit") %></h4>
      </div>
      <div class="modal-body">
        <div class="smart-form">
          <fieldset>
            <div class="row">
              <div class="col col-md-12">
                <label class="label"> 
                  <%= f.label t("album_tag.name") %><br>
                </label>
                <label class="input">
                  <i class="icon-append fa fa-pencil"></i>
                  <%= f.text_field :text, required: true, maxlength: 12, placeholder: t("album_tag.text_length_info") %>
                </label>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t("operate.submit"), class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t("operate.back") %></button>
      </div>
      
<% end %>
