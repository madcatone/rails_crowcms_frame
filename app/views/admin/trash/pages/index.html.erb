<%if notice %>
<div class="alert alert-success fade in">
  <button class="close" data-dismiss="alert">Ã—</button>
  <i class="fa-fw fa fa-check"></i>
  <strong><%= notice %></strong>
</div>
<% end %>
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-trash-o"></i> </span>
    <h2><p><%= t("trash.page_title") %></p></h2>
  </header>
  <div>
    <div class="jarviswidget-editbox"></div>  
    <div class="widget-body no-padding">
      <table id="datatable_fixed_column" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th><%= t("page.id") %></th>
            <th><%= t("page.title") %></th>
            <th><%= t("page.content") %></th>
            <th><%= t("page.deleted_at") %></th>
            <th><%= t("operate.title") %></th>
          </tr>
          <tr class="second">
            <td class="smart-form">
              <label class="input">
                <input type="text" value="<%= t("page.search_by_id") %>" class="search_init">
              </label>
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" value="<%= t("page.search_by_title") %>" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input">
                <input type="text" value="<%= t("page.search_by_content") %>" class="search_init">
              </label>  
            </td>
            <td class="smart-form">
              <label class="input"><i class="icon-append fa fa-calendar"></i>
                <input type="text" value="<%= t("page.search_by_deleted") %>" class="datepicker search_init" data-dateformat="yy-mm-dd">
              </label>  
            </td>
            <td></td>
          </tr>
        </thead>

        <tbody>
          <% @admin_trush_pages.each do |admin_trush_page| %>
          <tr>
            <td><%= admin_trush_page.id %></td>
            <td><%= admin_trush_page.title %></td>
            <td><%= admin_trush_page.abstract %></td>
            <td><%= admin_trush_page.deleted_at.strftime("%Y-%m-%d, %H:%M") %></td>
            <td>
             <%= link_to t("operate.restore"), restore_admin_trash_page_path(admin_trush_page.id), method: :put, class: "btn bg-color-green txt-color-white" %>
              <%= link_to t("operate.delete"), admin_trash_page_path(admin_trush_page.id), method: :delete, data: { title: "#{t('page.delete_title')}", confirm: "#{t('page.force_delete_info')}" }, class: "btn bg-color-red txt-color-white" %>
           </td>
          </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>







