
  <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-table"></i> </span>
      <h2><p><%= t("article_picture.table_title") %></p></h2>
    </header>
    <div>
      <div class="jarviswidget-editbox"></div>  
      <div class="widget-body no-padding">
        <div class="widget-body-toolbar"></div>
        <table id="dt_basic" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th><%= t("article_picture.id") %></th>
              <th><%= t("article_picture.picture_name") %></th>
              <th><%= t("article_picture.picture_type") %></th>
              <th><%= t("article_picture.picture_size") %></th>
              <th><%= t("article_picture.picture_updated_at") %></th>
              <th><%= t("operate.title") %></th>
            </tr>
          </thead>
          <tbody>
            <% @admin_article_pictures.each do |admin_article_picture| %>
            <tr>
              <td><%= admin_article_picture.id %></td>
              <td><%= admin_article_picture.picture_file_name %></td>
              <td><%= admin_article_picture.picture_content_type %></td>
              <td><%= admin_article_picture.picture_file_size %></td>
              <td><%= admin_article_picture.picture_updated_at %></td>
              <td>
                <a href="javascript:void(0);" class="btn bg-color-green txt-color-white" rel="tooltip" data-placement="left" data-original-title="<img src=' <%= admin_article_picture.picture.url(:small) %>' alt='<%= admin_article_picture.picture_file_name %>'>" data-html="true" data-toggle="modal" data-target="#myModal_<%= admin_article_picture.id %>"><%= t("operate.preview") %></a> 
                <%= link_to t("operate.delete"), admin_article_picture, method: :delete, data: { title: "#{t('article_picture.delete_title')}", confirm: "#{t('article_picture.delete_info')}" }, class: "btn bg-color-red txt-color-white" %>
              </td>
            </tr>
            <div class="modal fade" id="myModal_<%= admin_article_picture.id %>" tabindex="-1" role="dialog" 
            aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" 
                  data-dismiss="modal" aria-hidden="true">
                  &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <%= t "operate.preview" %>[<%= admin_article_picture.picture_file_name %>]
                </h4>
              </div>
              <div class="modal-body">
                <div class="row text-center">
                  <img src=' <%= admin_article_picture.picture.url %>' alt='<%= admin_article_picture.picture_file_name %>'>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" 
                data-dismiss="modal">关闭
              </button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal -->


            <% end %>
          </tbody>
        </table>      
      </div>
    </div>
  </div>
